<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/colorBackground"
    android:orientation="vertical"
    android:padding="10dp"
    android:textColor="@color/colorText">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RadioGroup
                android:id="@+id/rg_suffix"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="10dp">

                <RadioButton
                    android:id="@+id/rb_mr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="@string/text_mr"
                    android:textColor="@color/colorText"
                    android:textSize="20dp" />

                <RadioButton
                    android:id="@+id/rb_ms"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="@string/text_ms"
                    android:textColor="@color/colorText"
                    android:textSize="20dp" />

                <RadioButton
                    android:id="@+id/rb_mrs"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="@string/text_mrs"
                    android:textColor="@color/colorText"
                    android:textSize="20dp" />

                <RadioButton
                    android:id="@+id/rb_dr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="@string/text_dr"
                    android:textColor="@color/colorText"
                    android:textSize="20dp" />

            </RadioGroup>


            <LinearLayout
                android:id="@+id/fname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="fill_horizontal"
                android:layout_margin="5dp"
                android:orientation="horizontal"
                android:textColor="@color/colorText">

                <TextView
                    android:id="@+id/text_fname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="2"
                    android:text="@string/fname"
                    android:textColor="@color/colorText"
                    android:textSize="17dp" />

                <EditText
                    android:id="@+id/edit_fname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_weight="1"
                    android:background="@color/colorEdit"
                    android:padding="10dp"
                    android:textColor="@color/colorText"
                    android:textSize="17dp" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/lname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="fill_horizontal"
                android:layout_margin="5dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/text_lname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="2"
                    android:text="@string/lname"
                    android:textColor="@color/colorText"
                    android:textSize="17dp" />

                <EditText
                    android:id="@+id/edit_lname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_weight="1"
                    android:background="@color/colorEdit"
                    android:padding="10dp"
                    android:textColor="@color/colorText"
                    android:textSize="17dp" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="fill_horizontal"
                android:layout_margin="5dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/text_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="2"
                    android:text="@string/address"
                    android:textColor="@color/colorText"
                    android:textSize="17dp" />

                <EditText
                    android:id="@+id/edit_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_weight="1"
                    android:background="@color/colorEdit"
                    android:padding="10dp"
                    android:textColor="@color/colorText"
                    android:textSize="17dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/province"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="fill_horizontal"
                android:layout_margin="5dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/text_province"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="2"
                    android:text="@string/province"
                    android:textColor="@color/colorText"
                    android:textSize="17dp" />

                <Spinner
                    android:id="@+id/spinner_province"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_weight="1"
                    android:padding="10dp"
                    android:textColor="@color/colorText"
                    android:textSize="17dp" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/country"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="fill_horizontal"
                android:layout_margin="5dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/text_country"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="2"
                    android:text="@string/country"
                    android:textColor="@color/colorText"
                    android:textSize="17dp" />

                <EditText
                    android:id="@+id/edit_country"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_weight="1"
                    android:background="@color/colorEdit"
                    android:padding="10dp"
                    android:textColor="@color/colorText"
                    android:textSize="17dp" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/postal_submit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_margin="5dp"
                android:orientation="horizontal"
                android:textColor="@color/colorText">

                <TextView
                    android:id="@+id/text_postal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="@string/postal"
                    android:textColor="@color/colorText"
                    android:textSize="17dp" />

                <EditText
                    android:id="@+id/edit_postal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_weight="1"
                    android:background="@color/colorEdit"
                    android:padding="10dp"
                    android:textColor="@color/colorText"

                    android:textSize="17dp" />

                <Button
                    android:id="@+id/btn_submit"
                    android:layout_width="111dp"
                    android:layout_height="match_parent"
                    android:height="5dp"
                    android:padding="5dp"
                    android:text="@string/submit" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
